{
  "realm": "tchalanet",
  "enabled": true,
  "displayName": "Tchalanet",
  "registrationAllowed": false,
  "resetPasswordAllowed": true,
  "loginWithEmailAllowed": true,
  "rememberMe": true,
  "roles": {
    "realm": [
      { "name": "SUPER_ADMIN", "description": "Platform super administrator" },
      { "name": "ADMIN_ENTERPRISE", "description": "Enterprise admin" },
      { "name": "SUPERVISOR", "description": "Supervisor (zone/outlet)" },
      { "name": "AGENT", "description": "Point-of-sale agent" },
      { "name": "AUDITOR", "description": "Read-only auditor" }
    ]
  },
  "clients": [
    {
      "clientId": "tchalanet-web",
      "name": "Tchalanet Web (Back-office)",
      "protocol": "openid-connect",
      "publicClient": true,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": false,
      "implicitFlowEnabled": false,
      "serviceAccountsEnabled": false,
      "redirectUris": [
        "http://localhost*",
        "http://127.0.0.1*"
      ],
      "webOrigins": [
        "http://localhost",
        "http://localhost:*",
        "http://127.0.0.1",
        "http://127.0.0.1:*"
      ],
      "attributes": {
        "post.logout.redirect.uris": "+"
      },
      "protocolMappers": [
        {
          "name": "realm-roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "userinfo.token.claim": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "roles",
            "jsonType.label": "String"
          }
        },
        {
          "name": "active_enterprise_id",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "active_enterprise_id",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true",
            "claim.name": "active_enterprise_id",
            "jsonType.label": "String"
          }
        },
        {
          "name": "tenants (JSON)",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "tenants",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true",
            "claim.name": "tenants",
            "jsonType.label": "JSON"
          }
        }
      ]
    },
    {
      "clientId": "tchalanet-api",
      "name": "Tchalanet API (Spring)",
      "protocol": "openid-connect",
      "publicClient": false,
      "bearerOnly": false,
      "standardFlowEnabled": true,
      "serviceAccountsEnabled": false,
      "directAccessGrantsEnabled": false,
      "redirectUris": [
        "http://localhost*",
        "http://127.0.0.1*"
      ],
      "webOrigins": ["*"],
      "secret": "CHANGE_ME_IN_PROD",
      "attributes": {
        "oauth2.device.authorization.grant.enabled": "false"
      },
      "protocolMappers": [
        {
          "name": "realm-roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "userinfo.token.claim": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "roles",
            "jsonType.label": "String"
          }
        },
        {
          "name": "active_enterprise_id",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "active_enterprise_id",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true",
            "claim.name": "active_enterprise_id",
            "jsonType.label": "String"
          }
        },
        {
          "name": "tenants (JSON)",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "tenants",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true",
            "claim.name": "tenants",
            "jsonType.label": "JSON"
          }
        }
      ]
    }
  ],
  "users": [
    {
      "username": "superadmin@tchalanet.ht",
      "email": "superadmin@tchalanet.ht",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        { "type": "password", "value": "superadmin", "temporary": false }
      ],
      "realmRoles": ["SUPER_ADMIN"]
    },
    {
      "username": "admin@tchalanet.ht",
      "email": "admin@tchalanet.ht",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        { "type": "password", "value": "changeme", "temporary": false }
      ],
      "realmRoles": ["ADMIN_ENTERPRISE"],
      "attributes": {
        "active_enterprise_id": ["ent-1"],
        "tenants": [
          "[{\"enterprise_id\":\"ent-1\",\"role\":\"ADMIN_ENTERPRISE\"}]"
        ]
      }
    }
  ]
}
