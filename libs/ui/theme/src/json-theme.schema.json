{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "TchalanetTheme",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "kind": { "enum": ["material", "custom"] },
    "dark": { "type": "boolean" },
    "density": { "enum": [0, -1, -2] },
    "seeds": {
      "type": "object",
      "properties": {
        "primary": { "type": "string", "pattern": "^#([0-9a-fA-F]{3}|[0-9a-fA-F]{6})$" },
        "accent":  { "type": "string", "pattern": "^#([0-9a-fA-F]{3}|[0-9a-fA-F]{6})$" },
        "warn":    { "type": "string", "pattern": "^#([0-9a-fA-F]{3}|[0-9a-fA-F]{6})$" },
        "dot":     { "type": "string", "pattern": "^#([0-9a-fA-F]{3}|[0-9a-fA-F]{6})$" }
      },
      "additionalProperties": false
    },
    "cssVars": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    }
  },
  "required": ["id", "name", "kind", "cssVars"],
  "additionalProperties": false
}
