      "@tchl/facades": ["libs/shared/facades/src/index.ts"],
      "@tchl/shared/auth": ["libs/shared/auth/src/index.ts"],
      "@tchl/types": ["libs/shared/types/src/index.ts"],
      "@tchl/ui/layout": ["libs/ui/layout/src/index.ts"],
      "@tchl/ui/plans": ["libs/ui/plans/src/index.ts"],
      "@tchl/ui/styles": ["libs/ui/styles/src/index.ts"],
      "@tchl/ui/theme": ["libs/ui/theme/src/index.ts"],
